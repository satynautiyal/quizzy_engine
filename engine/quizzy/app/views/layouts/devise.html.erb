<html class="h-full bg-gray-100">
  <head>
    <%= favicon_link_tag 'logo.png'%>
    <title>QuizMaker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
