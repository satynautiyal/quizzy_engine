<div id="<%= dom_id image_upload %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= image_upload.name %>
  </p>
  <% if action_name != "show" %>
    <%= link_to "Show this image upload", image_upload, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this image upload', edit_image_upload_path(image_upload), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
